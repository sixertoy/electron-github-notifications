{
  "extends": "stylelint-config-standard",
  "plugins": [
    "stylelint-scss"
  ],
  "rules": {
    "color-hex-case": "upper",
    "color-hex-length": "long",
    "at-rule-no-unknown": [
      true, {
      "ignoreAtRules": ["each", "else", "elseif", "error", "extend", "function", "include", "if", "mixin",  "return"]
      }
    ]
  }
}
